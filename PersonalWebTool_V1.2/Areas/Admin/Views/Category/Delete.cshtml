@model PostCategory

@{ 
    ViewBag.Title = "Delete Category";
} 

<h1>Confirm Deletion</h1>
<h3>Are you sure you want to delete @Model.Name category </h3>

<form asp-controller="Category" asp-action="Delete" method="post">
    <input type="hidden" asp-for="PostCategoryID" />
    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Category" asp-action="List">Cancel</a>
</form>